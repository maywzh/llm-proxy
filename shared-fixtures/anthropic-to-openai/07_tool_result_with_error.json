{
  "name": "tool_result_with_error",
  "description": "Error tool_result should have [Error] prefix in content",
  "input": {
    "model": "claude-4-sonnet",
    "max_tokens": 1024,
    "messages": [
      { "role": "user", "content": "Read it" },
      {
        "role": "assistant",
        "content": [
          { "type": "tool_use", "id": "tu_1", "name": "Read", "input": {} }
        ]
      },
      {
        "role": "user",
        "content": [
          { "type": "tool_result", "tool_use_id": "tu_1", "content": "file not found", "is_error": true }
        ]
      }
    ]
  },
  "expected": {
    "message_count": 3,
    "messages": [
      { "index": 2, "role": "tool", "tool_call_id": "tu_1", "content": "[Error] file not found" }
    ]
  }
}
